<div class="col-md-8 offset-md-1">
  <h2>Books</h2>
  <table class="table table-hover table-inverse">
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
        <th colspan="3"></th>
      </tr>
    </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
          <% if book.user.profile_image_id? %>
              <th><%= link_to user_path(book.user) do %><%= attachment_image_tag book.user, :profile_image, format: 'jpeg', size: "100x100" %><% end %></th>
          <% else %>
              <th><%= link_to user_path(book.user) do %><%= image_tag('no_image.jpg') %><% end %></th>
          <% end %>
        <td><%= link_to "#{book.title}", book_path(book) %></td>
        <td><%= book.body %></td>
        <% end %>
      </tr>
  </tbody>
</table>
</div>
