<div class="row">
  <%= render 'partial/sidebar' %>
  <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
      <tbody>
        <tr>
          <td>
            <% if @book.user.profile_image_id? %>
                <th>
                  <%= link_to user_path(@book.user) do %><%= attachment_image_tag @book.user, :profile_image, format: 'jpeg', size: "100x100" %>
                    <div><%=@book.user.name %></div>
                  <% end %>
                </th>
            <% else %>
                <th><%= link_to user_path(@book.user) do %><%= image_tag('no_image.jpg') %><div><%=@book.user.name %></div><% end %></th>
            <% end %>
          </td>
          <td><%= link_to @book.title, book_path(@book) %></td>
          <td><%= @book.body %></td>
          <% if @book.user == current_user%>
            <td><div class="btn btn-sm btn-success"><%= link_to "Edit", edit_book_path(@book) %></div></td>
            <td><div class="btn btn-sm btn-success"><%= link_to "Destroy", book_path(@book), method: :delete %></div></td>
          <% end %>
        </tr>
      </tbody></table>
    </div>
  </div>
</div>
