<div class="row">
  <%= render 'partial/sidebar' %>
  <div class="col-md-8 offset-md-1">
    <h2>Book detail</h2>
    <table class="table">
    <tbody>
      <tr>
        <td><%= current_user.name %></td>
        <td><%= @book.title %></td>
        <td><%= @book.body %></td>
        <% if @book.user == current_user%>
          <td><div class="btn btn-sm btn-success"><%= link_to "Edit", edit_book_path(@book) %></div></td>
          <td><div class="btn btn-sm btn-success"><%= link_to "Destroy", book_path(@book), method: :delete %></div></td>
        <% end %>
      </tr>
    </tbody></table>
  </div>
</div>
