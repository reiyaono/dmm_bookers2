<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>Editing Book</h1>
      <%= form_with model:@book, local:true do |f| %>
        <div class="form-group">
          <div><label for="inputName">Title</label></div>
          <%= f.text_field :name, autofocus: true, placeholder:"名前"%>
        </div>
        <div class="form-group">
          <div><label for="inputImage">Opinion</label></div>
          <%= f.text_area :body, autofocus: true,  placeholder:"名前"%>
        </div>
        <div class="form-group"><%= f.submit "Update Book", class: "btn btn-sm btn-success" %></div>
      <% end %>
      <%= link_to "Back", book_path(@book) %> |
      <%= link_to "Back", books_path %>
    </div>
  </div>
</div>