<div class="col-md-3">
  <h2>User info</h2>
  <table class="table">
    <tbody>
      <tr>
        <% if @user.profile_image_id? %>
          <th><%= attachment_image_tag @user, :profile_image, format: 'jpeg', size: "100x100" %></th>
        <% else %>
          <th><%= image_tag('no_image.jpg') %></th>
        <% end %>
      </tr>
      <tr>
    	  <th>name</th>
    	  <th><%= @user.name %></th>
      </tr>
      <tr>
    	  <th>introduction</th>
    	  <th><%= @user.introduction %></th>
      </tr>
    </tbody>
  </table>


<div class="row">
  <%= link_to "", edit_user_path(@user), class: 'btn btn-outline-secondary btn-block fas fa-user-cog' %>
</div>


  <h2 class="mt-3">New book</h2>
  <div class="form-body p-4">
    <% if @user.errors.any? %>
      <%= @user.errors.count %>件のエラーが発生しました
      <% @user.errors.full_messages.each do |message| %>
        <%= message %>
      <% end %>
    <% end %>
    <%= form_with model: @book, local: true, url: { controller: 'books', action: 'create' },html: {method: "post"} do |f| %>
      <label for="book_title">title</label>
      <%= f.text_field :title, class:"form-control", rows:"3" %>
      <label for="book_body">opinion</label>
      <%= f.text_area :body, class:"form-control", rows:"3" %>
      <hr>
      <%= f.submit 'Create Book', class:"btn btn-lg btn-block btn-success mt-4" %>
    <% end %>
  </div>
</div>
