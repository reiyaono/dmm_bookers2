    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h2>User info</h2>
      <%= form_with model:@user, local:true do |f| %>
        <div class="form-group">
          <div><label for="inputName">Name</label></div>
          <%= f.text_field :name, autofocus: true %>
        </div>
        <div class="form-group">
          <div><label for="inputImage">Profile Image</label></div>
          <%= f.attachment_field :profile_image, class: "w-100" %>
        </div>
        <div class="form-group">
          <div><label for="inputIntroe">Introduction</label></div>
          <%= f.text_area :introduction, autofocus: true %>
        </div>
        <div class="form-group"><%= f.submit "Update User", class: "btn btn-sm btn-success" %></div>
      <% end %>
    </div>
