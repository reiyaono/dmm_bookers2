<!DOCTYPE html>
<html>
  <head>
    <title>DmmApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.9.0/css/all.css">
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container">
        <a class="navbar-brand" href="/"><span>Bookers</span></a>
      </div>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto">
          <% if user_signed_in? %>
            <li><%= link_to "Home", root_path, class: 'fas fa-home nav-link text-light' %></li>
            <li><%= link_to "Users", users_path, class: 'fas fa-users nav-link text-light' %></li>
            <li><%= link_to "Books", books_path, class: 'fas fa-book nav-link text-light' %></li>
            <li><%= link_to "logout", destroy_user_session_path, method: :delete, class: 'fas fa-sign-out-alt nav-link text-light' %></li>
          <% else %>
            <li><%= link_to "Home", new_user_registration_path, class: 'fas fa-home nav-link text-light' %></li>
            <li><%= link_to "About", new_user_session_path, class: 'fas fa-link nav-link text-light' %></li>
            <li><%= link_to "sign up", new_user_session_path, class: 'fas fa-user-plus nav-link text-light' %></li>
            <li><%= link_to "login", new_user_session_path, class: 'fas fa-sign-out-alt nav-link text-light' %></li>
          <% end %>
        </ul>
      </div>
    </nav>
    <div class="container">
      <%= yield %>
    </div>
    <div class="container mt-5">
      <div class="row">
        <div class="mx-auto">
        	<p>CopyRight Infratop.inc</p>
        </div>
      </div>
    </div>
  </body>
</html>
