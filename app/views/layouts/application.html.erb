<!DOCTYPE html>
<html>
  <head>
    <title>DmmApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container">
        <a class="navbar-brand" href="/"><span>Bookers</span></a>
      </div>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto">
          <% if user_signed_in? %>
            <li><%= link_to "Home", root_path %></li>
            <li><%= link_to "Users", users_path %></li>
            <li><%= link_to "Books", books_path %></li>
            <li><%= link_to "logout", destroy_user_session_path, method: :delete %></li>
          <% else %>
            <li><%= link_to "Home", new_user_registration_path %>></li>
            <li><%= link_to "About", new_user_session_path %></li>
            <li><%= link_to "sign up", new_user_session_path %></li>
            <li><<%= link_to "login", new_user_session_path %></li>
          <% end %>
        </ul>
      </div>
    </nav>
    <%= yield %>
  </body>
</html>
